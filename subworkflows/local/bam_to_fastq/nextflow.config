// Define global parameters and profiles here.

// Configure the processes.
process {
    // You can set default directives for all processes here, like 'cpus', 'memory', and 'container'.
    cpus = 1
    memory = '2 GB'

    // Use withName to target a specific process in your pipeline.
    withName: 'BAM_TO_FASTQ_PROCESS' {
        // You can override the default directives for this specific process.
        cpus = 2
        memory = '4 GB'
        container = 'quay.io/biocontainers/samtools:1.15.1--h897950b_0'
        
        // This is where you can define ext.args, though for a simple process like this,
        // it may not be necessary unless you need to add custom flags.
        // ext.args = '--some-extra-flag'
        
        // Use publishDir to define where the output files should be saved.
        publishDir = "${params.outdir}/fastq"
        
        // The mode specifies how files are published (e.g., 'copy', 'symlink').
        publishDir.mode = 'symlink'
    }
}
